<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-800 text-white flex items-center flex-col p-4">
   <div class="profile flex items-center flex-col">
    <form action="/fileupload" hidden id="uploadForm" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="relative">
        <div class="w-20 h-20 relative bg-zinc-200 rounded-full overflow-hidden object-cover object-center"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR3qSNRCUSG6NFDY0vk9ok7n1-d0UYWcJkyYQ&" alt="">
        </div>
        <span id="uploadSpan" class="absolute bottom-0 right-0 w-6 h-6 cursor-pointer bg-zinc-100 rounded-full flex justify-center items-center">
            <i class="fa-regular fa-pen-to-square text-zinc-800 text-sm"></i>
        </span>
    </div>
    <h1 class="text-xl font-semibold">User Name</h1>
    <h3 class="text-regular text-zinc-300">@username</h3>
    <a href="/edit" class="py-1 px-4 mt-2 inline-block bg-zinc-600 rounded-full">Edit</a>
    <button class="px-8 py-2 m-4 bg-red-600 text-white font-semibold text-sm rounded-lg">Add New Post</button>
   </div>
   <div class="flex flex-wrap w-full text-white pt-4">
    <div class="m-4">
        <div class="w-40 h-28 bg-zinc-200 rounded-md overflow-hidden"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQhDlb8_dDybPVz80tdcOUnH5QZqtM4zC7Eew&usqp=CAU" alt=""></div>
        <h1 class="text-lg">All Pins</h1>
        <p class="text-xs text-zinc-400">28 pins</p>
    </div>
   </div>
</div>
<script>
    document.querySelector("#uploadSpan").addEventListener("click",function(){
        document.querySelector("#uploadForm input").click();
    })
    document.querySelector("#uploadForm input").addEventListener("change",function(){
        document.querySelector("#uploadForm").submit();
    })
</script>
<% include ./partials/footer.ejs %>